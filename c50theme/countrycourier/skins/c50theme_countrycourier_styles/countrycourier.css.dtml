/*** NAVIGATION ***/
/* remove standard icons from navigation portlets an sitemap */
.navTreeItem img {
    display: none !important;
}

.portletItem {
	border: 0px;
	margin: 0;
	padding: 0;
}

.navTreeItem a,
dd.portletItem .navTreeItem a {
    border: 0px solid White;
    background: transparent url("++resource++c50theme.countrycourier.images/navbutton.gif") no-repeat !important;
    display: block;
    text-decoration: none;
    padding-top: 7px;
    padding-bottom: 0;
    color: #3b3b3b;
	height: 32px;
	width: 162px;
}
.navTreeItem a:hover,
dd.portletItem .navTreeItem a:hover {
    background: transparent url("++resource++c50theme.countrycourier.images/navbutton.gif") no-repeat !important;
    color: #779120;
    border: 0px solid #8cacbb;
}
.navTreeCurrentItem {
    background: transparent url("++resource++c50theme.countrycourier.images/navbutton.gif") no-repeat !important;
    color: #3b3b3b;
    border: 0px solid #8cacbb !important;
}

.navTreeItem a span {
	margin-left: 50px;
}


dl.portlet.portletNavigationTree dt.portletHeader {
	display: none;
}

.navTreeLevel1 {
	display: none;
}

.portlet {
	border-bottom: 0px;
}

.portletLogin {
	display: none;
}

#portal-personaltools {
	background: none;
	border: none;
}


/** FOOTER **/
#portal-footer,
#portal-colophon {
	display: none;
}



