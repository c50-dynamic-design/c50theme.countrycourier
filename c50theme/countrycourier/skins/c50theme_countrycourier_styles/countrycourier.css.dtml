body {
	font: 60% Arial, Helvetica, Geneva, sans-serif;
	background:#fff;
}

 /* content text styles */
h1, h2, h3, h4, h5, h6 {
    color: #069;
    font-family: Arial, Helvetica, Geneva, sans-serif;
    margin: 0.75em 0 0.25em 0;
    border: none;
}

h1 {
    font-size: 140%;
}
h2 {
    font-size: 130%;
}

#visual-portal-wrapper {
	margin:0 auto !important;
    padding: 0 !important;
    width:740px !important; 
    /* width:960px !important;*/
	background:#fff url(++resource++c50theme.countrycourier.images/logo.jpg) scroll no-repeat top center;
}

#portal-top {
	background:transparent url(&dtml-portal_url;/logo.gif) scroll no-repeat top center;
}

.section-accueil #portal-top,
.section-home #portal-top,
.section-onthaal #portal-top {
	background-image: none !important;
}


/** LOGO **/
#portal-logo img {
	margin: 18px 0 0 18px;
}

/* hide logo-cee.png for iE6 */
